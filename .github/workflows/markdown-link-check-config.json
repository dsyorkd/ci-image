{
  "ignorePatterns": [
    {
      "pattern": "^https://task-master.dev"
    },
    {
      "pattern": "^https://mend.io"
    },
    {
      "pattern": "^https://developer.mend.io"
    }
  ],
  "replacementPatterns": [
    {
      "pattern": "^/",
      "replacement": "{{BASEURL}}/"
    }
  ],
  "httpHeaders": [
    {
      "urls": ["https://github.com/"],
      "headers": {
        "Accept": "application/vnd.github.v3+json",
        "User-Agent": "GitHub Action Link Checker"
      }
    }
  ],
  "timeout": "10s",
  "retryOn429": true,
  "retryCount": 3,
  "fallbackHttpStatus": [200, 202]
}